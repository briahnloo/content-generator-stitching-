# Viral Clips Pipeline - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Apify API Token (for TikTok scraping)
# Get from: https://console.apify.com/account/integrations
APIFY_API_TOKEN=apify_api_...

# OpenAI API Key (for video classification only - captions use simple countdown)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# =============================================================================
# OPTIONAL: YouTube Upload
# =============================================================================

# Google OAuth credentials (only needed for YouTube uploads)
# Get from: https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=

# =============================================================================
# PATHS (defaults work for most setups)
# =============================================================================

# DATABASE_PATH=./data/pipeline.db
# DOWNLOAD_DIR=./data/downloads
# OUTPUT_DIR=./output
# REVIEW_DIR=./output/review
# MUSIC_DIR=./config/music

# =============================================================================
# VIDEO SETTINGS
# =============================================================================

# Output dimensions (9:16 vertical for Shorts/Reels/TikTok)
# VIDEO_WIDTH=1080
# VIDEO_HEIGHT=1920
# FPS=30

# Maximum duration per clip in seconds
# MAX_CLIP_DURATION=15

# =============================================================================
# COMPILATION SETTINGS
# =============================================================================

# Number of clips per compilation (5 clips @ ~15s = ~75s total duration)
# MIN_CLIPS_PER_COMPILATION=5
# MAX_CLIPS_PER_COMPILATION=5

# Minimum classification confidence (0.0-1.0)
# MIN_CLASSIFICATION_CONFIDENCE=0.3

# =============================================================================
# DISCOVERY SETTINGS
# =============================================================================

# Default hashtags to search (comma-separated)
# DISCOVERY_HASHTAGS=viral,fyp,trending,fails,satisfying

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Download retry attempts
# MAX_DOWNLOAD_RETRIES=3

# OpenAI model for classification
# OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# MULTI-ACCOUNT SETTINGS (New in v2.0)
# =============================================================================

# Encryption key for storing credentials securely
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# If not set, a key will be derived automatically (less secure)
CREDENTIALS_ENCRYPTION_KEY=

# =============================================================================
# AUTO-APPROVAL SETTINGS
# =============================================================================

# Confidence threshold for auto-approving compilations (0.0-1.0)
# Compilations with average confidence >= this value skip manual review
# AUTO_APPROVE_THRESHOLD=0.75

# Minimum confidence required for uploading to any platform
# MIN_CONFIDENCE_FOR_UPLOAD=0.6

# =============================================================================
# RATE LIMITS (per account per day)
# =============================================================================

# Maximum uploads per YouTube account per day
# YOUTUBE_DAILY_LIMIT_PER_ACCOUNT=3

# Maximum uploads per TikTok account per day
# TIKTOK_DAILY_LIMIT_PER_ACCOUNT=5

# =============================================================================
# SCHEDULER SETTINGS
# =============================================================================

# Enable/disable the scheduler
# SCHEDULER_ENABLED=true

# How often to discover new content (hours)
# DISCOVERY_INTERVAL_HOURS=4

# How often to process uploads (minutes)
# UPLOAD_INTERVAL_MINUTES=15
